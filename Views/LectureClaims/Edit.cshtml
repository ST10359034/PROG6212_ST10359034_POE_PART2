 @model CMCS.Models.LectureClaim

@{
    ViewData["Title"] = "Edit Claim";
}

<div class="container my-5">
    <h1 class="text-center text-primary mb-4">Edit Claim</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="LecturerName" class="control-label"></label>
                    <input asp-for="LecturerName" class="form-control" />
                    <span asp-validation-for="LecturerName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LecturerSurname" class="control-label"></label>
                    <input asp-for="LecturerSurname" class="form-control" />
                    <span asp-validation-for="LecturerSurname" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LecturerEmail" class="control-label"></label>
                    <input asp-for="LecturerEmail" class="form-control" />
                    <span asp-validation-for="LecturerEmail" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ClaimDate" class="control-label"></label>
                    <input asp-for="ClaimDate" class="form-control" type="date" />
                    <span asp-validation-for="ClaimDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HoursWorked" class="control-label"></label>
                    <input asp-for="HoursWorked" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="HoursWorked" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HourlyRate" class="control-label"></label>
                    <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ClaimDocument" class="control-label"></label>
                    <input asp-for="ClaimDocument" class="form-control" type="file" />
                    <span asp-validation-for="ClaimDocument" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Update" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="ClaimsList" class="btn btn-secondary">Your Claims</a>
    </div>
</div>


